@{ViewBag.Title = "Warehouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 translate="WAREHOUSELIST"></h2>
<hr />
<div ng-controller="warehouseController">
    <div class="pull-left">
        <button type="button" class="btn btn-success btn-sm" ng-click="openModalAddWarehouseClassification()"><i class="fa fa-plus-circle"></i> <span translate="ADD"></span></button>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th translate="CREATIONDATE"></th>
                            <th translate="CODENUMBER"></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="item in warehouse">
                            <td>{{item.CreationDate}}</td>
                            <td>{{item.NumberCode}}</td>
                            <td class="pull-right">
                                <button type="button" class="btn btn-warning btn-xs" @*ng-click="editCourier($index)"*@><i class="fa fa-pencil"></i></button>
                                <button type="button" class="btn btn-danger btn-xs" @*ng-click="removeItem($index)"*@><i class="fa fa-trash"></i></button>
                                <a type="button" class="btn btn-info btn-xs" href='@Url.Action("receipt","warehouse")'><i class="fa fa-file"></i></a>
                            </td>                            
                        </tr>
                    </tbody>
                </table>
                <span class="clearfix"></span>
            </div>
        </div>
    </div>
    
</div>


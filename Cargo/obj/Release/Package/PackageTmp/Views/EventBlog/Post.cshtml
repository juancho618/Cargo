
@{
    ViewBag.Title = "Post";
}
<div class="container" ng-controller="postController">
    <h2>{{post.title}}</h2>
    
    <div class="row">
        <div class="col-md-12">
            <div class=""><br />
                <div class="comments-container">
                    <ul id="comments-list" class="comments-list">
                        <li ng-repeat="item in postList">
                            <div class="comment-main-level">
                                <!-- Avatar -->
                                <div class="comment-avatar">
                                    <img src="~/Files/Img/{{item.mail}}/{{item.foto}}" alt="">
                                </div>

                                <!-- Contenedor del Comentario -->
                                <div class="comment-box">
                                    <div id="notificationsSound"></div>
                                    <div class="comment-head">
                                        <h6 class="comment-name by-author">
                                            <span>{{item.user}}&nbsp;</span> {{item.date}}
                                        </h6>

                                        <i class="fa fa-reply"></i>
                                        <i class="fa fa-heart"></i> 
                                    </div>
                                    <div class="comment-content">
                                        {{item.message}}

                                        <hr class="hr-sm"/>
                                        <a ng-show="item.url != null && item.url != ''" class="label label-info" href="~/Files/Img/{{id}}/{{item.url}}" target="_blank">
                                            <i class="fa fa-download"></i> File
                                        </a>
                                    </div>
                                </div>
                            </div>
